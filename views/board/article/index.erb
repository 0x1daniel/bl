<nav small>
  <li><a href="<%= back_url %>">Back</a></li>
  <li float-right><a href="/board/article/<%= article['slug'] %>/edit">Edit</a></li>
  <li float-right><a onclick="if(confirm('Delete?')) { window.location.href = '/board/article/<%= article['slug'] %>/delete?secret=<%= config['secrets']['access'] %>'; }">Delete</a></li>
</nav>

<br><br>

<article>
  <h4>
    <%= article['title'] %>
    <information>
      by <author><%= article['fullname'] %></author>
      on <timestamp><%= Time.at(article['created_date'].to_i).strftime('%m/%d/%y') %></timestamp>
      is <%= (article['is_draft'] == 'f') ? 'published' : 'drafted' %>
    </information>
  </h4>
  <abstract><%= article['abstract'] %></abstract>
  <hr>
  <content><%= article['content'] %></content>
</article>

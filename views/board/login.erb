<form login action="/board/login?secret=<%= config['secrets']['access'] %>" method="post">
  <form-group>
    <label for="i-username">username</label>
    <input type="text" id="i-username" name="username" placeholder="john" required autofocus>
  </form-group>
  <form-group>
    <label for="i-password">password</label>
    <input type="password" id="i-password" name="password" placeholder="<%= SecureRandom.hex 8 %>" required>
  </form-group>
  <form-footer>
    <button type="submit">login</button>
  </form-footer>
</form>

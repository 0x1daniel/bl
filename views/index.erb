<% if page == 0 %>
<cover index>
  <div>
    <h2>welcome to <%= config['name'] %></h2>
    <p><%= config['abstract']['long'] %></p>
  </div>
</cover>
<% end %>

<% if articles %>
  <% articles.each do |a| %>
    <h4><%= a['title'] %></h4>
    <a href="/article/<%= a['slug'] %>">Read more...</a><br>
  <% end %>
<% else %>
  <h2>no articles</h2>
<% end %>

<% if pagination %>
  <h4 pagination>pagination</h4>
  <ul pagination>
  <% pagination.each do |i| %>
    <% active = (i == page) ? 'active' : '' %>
    <li <%= active %>><a href="?page=<%= i %>"><%= i %></a></li>
  <% end %>
  </ul>
<% end %>
